<h1>Edit Fish</h1>

<p>
  <%= link_to "Back", @fish %>
</p>

<%= form_for @fish do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>